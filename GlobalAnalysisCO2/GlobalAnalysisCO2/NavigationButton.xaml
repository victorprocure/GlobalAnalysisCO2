<UserControl x:Class="GlobalAnalysisCO2.NavigationButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GlobalAnalysisCO2"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="3 3 3 3" MouseEnter="OnMouse" MouseLeave="OnMouse">
        <fa:ImageAwesome Icon="{Binding Icon}" Height="{Binding IconSize}" Cursor="{Binding Cursor}" Foreground="{Binding Foreground}" />
        <TextBlock Text="{Binding Label}" FontSize="{Binding LabelSize}" HorizontalAlignment="Center" Foreground="{Binding Foreground}" Cursor="{Binding Cursor}" />
    </StackPanel>
</UserControl>